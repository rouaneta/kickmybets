<div class="card-body">
  <div class="player-info">
    <% if game.status == "pending" %>
      <%= image_tag "players/default.jpg", class: "avatar-player", alt: "avatar-player" %>
    <% else %>
      <%= image_tag game.send("player_#{number}".to_sym).picture_path, class: "avatar-player", alt: "avatar-player" %>
    <% end %>
    <div class="player-name">
      <%= game.send("player_#{number}".to_sym).name.capitalize unless game.send("player_#{number}".to_sym).nil? %>
    </div>
  </div>

  <div class="score">
    <div class="score-title">
     <% unless game.send("score_p_#{number}".to_sym).nil? %>
        <%= game.send("score_p_#{number}".to_sym) %>
      <% else %>
        -
      <% end %>
    </div>
  </div>
</div>

