<%= resource_info %>:<br>

<% if resource_info == 'Odds' %>
  <%= resource.odds_choice_one.round(2) %> - <%= resource.odds_choice_two.round(2) %>

<% elsif resource_info == 'Bets' %>
  <%= Bet.where(choice: 1).where(resource_id: resource.id).sum(:amount) %> <i class="fas fa-coins"></i> -
  <%= Bet.where(choice: 2).where(resource_id: resource.id).sum(:amount) %> <i class="fas fa-coins"></i>
<% end %>
<br>
