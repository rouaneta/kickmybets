<button class="btn btn-info" type="button" data-toggle="collapse" data-target="#bet-button-<%= locals[:resource].class.to_s %>-<%= locals[:value] %>-<%= locals[:index] %>" aria-expanded="false" aria-controls="bet-button-<%= locals[:resource].class.to_s %>-<%= locals[:value] %>-<%= locals[:index] %>" <%= locals[:disabled] %>>
  <% if locals[:resource].class.to_s == 'Game' %>
    <% if locals[:value] == 1 %>
      <%= locals[:resource].player_one.name %>
    <% elsif locals[:value] == 2 %>
      <%= locals[:resource].player_two.name %>
    <% end %>
  <% elsif locals[:resource].class.to_s == 'Event' %>
    <% if locals[:value] == 1 %>
      <%= locals[:resource].choice_one %>
    <% elsif locals[:value] == 2 %>
      <%= locals[:resource].choice_two %>
    <% end %>
  <% end %>
</button>

<div class="collapse" id="bet-button-<%= locals[:resource].class.to_s %>-<%= locals[:value] %>-<%= locals[:index] %>">
  <div class="well">
    <%= render 'shared/bet_form', locals: {
      value: locals[:value],
      resource_type: locals[:resource].class.to_s,
      resource_id: locals[:resource].id
    } %>
  </div>
</div>
