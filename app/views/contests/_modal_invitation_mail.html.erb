  <div class="modal-dialog modal-dialog-custom" role="document">
    <div class="modal-content modal-content-radius">
      <div class="modal-header modal-noline" id="invitation-modal">
        <%= render 'invitation_mail', contest: contest %>
      </div>
    </div>
  </div>
</div>
