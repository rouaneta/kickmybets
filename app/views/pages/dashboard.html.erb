<div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.8),rgba(0,0,0,0.6)), url(<%= image_path("dashboard-banner.jpg") %>)">
  <div class="show-title" id ="dashboard-title">
    My contests
  </div>
</div>

<div class="container container-gambler">
  <h3>As Gambler</h3>
  <div class="cards">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card-container">
          <div class="card-contest">
            <!-- modal button -->
            <div class="plus-btn-pos" data-toggle="modal" data-target="#invitationModal">
              <%= render 'shared/plus_button' %>
            </div>
          </div>
        </div>
        <%= render 'modal_invitation' %>
      </div>
      <% @user.participations.map { |e| e.contest }.each do |contest|%>
        <% contest.participations.where(user: @user).each do |participation| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card-container">
              <%= link_to "", participation_path(participation) %>
              <div class="card-contest contest-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path(contest.picture_path) %>)">
                <div id="title"><%= contest.title %></div>
              </div>
              <div class="details">
                <span class="gambler">
                  <span id="number-gambler"> <%= contest.participations.count %> </span>
                  <i class="fas fa-user-friends" id="icone-people"></i>
                </span>
                <div class="coins">
                  <span id="number-coins"> <%= participation.betcoins %></span>
                  <span class="fas fa-coins"></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<!-- Display contest create -->
<div class="container">
  <h3>As organizer</h3>
  <div class="cards">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card-container">
          <div class="card-contest">
            <div class="plus-btn-pos">
              <%= link_to new_contest_path, class: "plus-link" do %>
                <%= render 'shared/plus_button' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% @user.contests.each do |contest| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card-container">
              <div class="card-contest contest-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path(contest.picture_path) %>)">
                <%= link_to "", contest_path(contest) %>
                <div id="title"><%= contest.title %></div>
              </div>
              <div class="details">
                <span class="gambler">
                  <span id="number-gambler"> <%= contest.participations.count %> </span>
                  <i class="fas fa-user-friends" id="icone-people"></i>
                </span>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>



