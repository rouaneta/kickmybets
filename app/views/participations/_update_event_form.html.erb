<%= simple_form_for [participation, event], remote: true do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :choice_win, as: :radio_buttons, collection: [[1, event.choice_one], [2, event.choice_two]], label_method: :last, value_method: :first, required: true %>
  <%= f.button :submit, class: 'btn btn-info' %>
<% end %>
